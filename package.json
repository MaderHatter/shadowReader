{
	"name": "statusbar-reader",
	"displayName": "shadow reader",
	"description": "摸鱼划水看书，十分隐蔽",
	"version": "0.8.2",
	"publisher": "rainbroadcast",
	"engines": {
		"vscode": "^1.54.0"
	},
	"icon": "images/icon.jpeg",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:statusbarReader.start"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/igzhang/statusbarReader.git"
	},
	"homepage": "https://github.com/igzhang/statusbarReader/blob/main/README.md",
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "shadow reader",
			"properties": {
				"statusbarReader.pageSize": {
					"type": "number",
					"default": 50,
					"description": "每次最多显示字数"
				},
				"statusbarReader.onlineBookURL": {
					"type": "string",
					"default": "https://www.biqugee6.com",
					"enum": [
						"https://www.caimoge.net",
						"https://www.biqugee6.com"
					],
					"enumDescriptions": [
						"采墨阁",
						"笔趣E"
					],
					"description": "在线书源"
				},
				"statusbarReader.hiddenTime": {
					"type": "number",
					"default": 30,
					"description": "自动隐藏时间"
				}
			}
		},
		"keybindings": [
			{
				"command": "statusbarReader.getNextPage",
				"key": "alt+."
			},
			{
				"command": "statusbarReader.getPrevPage",
				"key": "alt+,"
			},
			{
				"command": "statusbarReader.showBossInfo",
				"key": "alt+/"
			}
		],
		"commands": [
			{
				"command": "statusbarReader.start",
				"title": "开始工作",
				"category": "statusbarReader",
				"icon": "$(book)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "statusbarReader.start",
					"alt": "markdown.showPreviewToSide",
					"group": "navigation"
				}
			]
		},
		"capabilities" : {
			"hoverProvider" : "true"
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"chardet": "^1.3.0",
		"cheerio": "^1.0.0-rc.5",
		"iconv-lite": "^0.6.2"
	}
}
